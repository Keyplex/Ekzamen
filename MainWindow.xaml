        </Grid>

        <StackPanel
            Orientation="Vertical"
            Margin="5"
            VerticalAlignment="Bottom">

            <Button
                x:Name="AddMaterial"
                Content="Добавить книги"
                Click="AddBook_Click"
                />

            <Button 
                x:Name="Exit"
